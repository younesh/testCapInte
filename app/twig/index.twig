{# index.twig #}
{% extends "includes/layout.base.twig" %}

{% block pageTitle %}
    home -
    {{siteName}}
{% endblock %}

{% block classPage %}
    page-contact
{% endblock %}

{% block page %}
    <div class="form form--contact">
        <h1 class="form__title">
            Nous contacter
        </h1>
        <form action="validationContact.php" id="formContact">
            <div class="form__row">
                <label for="name">Nom - Prénom <span class="form__asterix">*</span></label>
                <input type="text" id="name" value="" placeholder="Nom Prénom" required>
            </div>
            <div class="form__row">
                <label for="company">Entreprise  </label>
                 <input type="text"  value=""  id="company">
            </div>
            <div class="form__row">
                <label for="email">Email  <span class="form__asterix">*</span></label>
                 <input type="email" id="email"  value=""  required>
            </div>

            <div class="form__row form__row--textarea">
                <label for="message">Message  <span class="form__asterix">*</span></label>
                <textarea id="message"    required></textarea>
            </div>
            <div class="form__message">

            </div>
            <div class="form__buttons">
                <input type="submit" class="button button--sendcontact" value="Envoyer">
            </div>

        </form>
    </div>
{% endblock %}
